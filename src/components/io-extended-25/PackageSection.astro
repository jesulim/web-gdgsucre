---
import PackageCodeLab from "@/assets/packages/codelab-package.webp"
import PackageInnovators from "@/assets/packages/innovators-package.webp"
import PackageWebVerse from "@/assets/packages/webverse-package.webp"
import PackageCard from "./PackageCard.astro"
---

<div id="seccion-paquetes" class="w-full py-12 md:py-10 relative z-10">
  <div class="flex flex-col items-center gap-8 md:gap-12 w-full px-4 md:px-8 max-w-[1200px] mx-auto">
    <!-- Cards Container - Staggered Layout -->
    <div class="flex flex-col md:flex-row items-center md:items-end justify-center w-full gap-8 md:gap-0">
      <!-- Left Card - Lower Position -->
      <div class="md:translate-y-8 md:ml-[96px] lg:ml-[96px] xl:ml-[96px] 2xl:ml-[96px] md:ml-[48px]">
        <PackageCard
          title="Paquete WebVerse"
          benefits={["Refrigerio", "Almuerzo", "Stickers"]}
          imageSrc={PackageWebVerse.src}
          imageAlt="Paquete WebVerse"
          price="Bs 35"
        />
      </div>
      
      <!-- Middle Card - Higher Position -->
      <div class="md:-translate-y-8 md:mx-[12px] lg:mx-[12px] xl:mx-[12px] 2xl:mx-[12px] md:mx-[6px]">
        <PackageCard
          title="Paquete Innovators"
          benefits={["Refrigerio", "Almuerzo", "Stickers", "Mousepad", "Estuche", "Cubo"]}
          imageSrc={PackageInnovators.src}
          imageAlt="Paquete Innovators"
          price="Bs 80"
        />
      </div>
      
      <!-- Right Card - Lower Position -->
      <div class="md:translate-y-8 md:mr-[96px] lg:mr-[96px] xl:mr-[96px] 2xl:mr-[96px] md:mr-[48px]">
        <PackageCard
          title="Paquete CodeLab"
          benefits={["Refrigerio", "Almuerzo", "Stickers", "Mousepad"]}
          imageSrc={PackageCodeLab.src}
          imageAlt="Paquete CodeLab"
          price="Bs 50"
        />
      </div>
    </div>
  </div>
</div>

<style>
  /* Media queries especÃ­ficas para tablets */
  @media (min-width: 768px) and (max-width: 1023px) {
    #seccion-paquetes .flex.flex-col.md\\:flex-row {
      gap: 1rem;
    }
    
    #seccion-paquetes .flex.flex-col.md\\:flex-row > div {
      transform: none !important;
      margin: 0 !important;
    }
  }
  
  /* Media queries para pantallas medianas */
  @media (min-width: 1024px) and (max-width: 1279px) {
    #seccion-paquetes .flex.flex-col.md\\:flex-row > div:first-child {
      margin-left: 2rem !important;
    }
    
    #seccion-paquetes .flex.flex-col.md\\:flex-row > div:last-child {
      margin-right: 2rem !important;
    }
  }
</style> 
