---
interface Props {
  img_url: string
  titulo: string
  subtitulo: string
  location?: string
}

const { img_url, titulo, subtitulo, location } = Astro.props
---

<div
    class="speaker-card relative w-full max-w-[280px] mx-auto"
>
    <!-- Imagen circular del speaker -->
    <div class="relative mb-6">
        <div class="w-48 h-48 mx-auto rounded-full overflow-hidden border-4 border-white shadow-2xl">
            <img
                src={img_url}
                alt={titulo}
                class="w-full h-full object-cover"
            />
        </div>
    </div>
    
    <!-- Tarjeta con información -->
    <div class="relative bg-gray-900 rounded-3xl px-6 py-8 text-center shadow-xl -mt-16 pt-20">
        <!-- Nombre del speaker -->
        <h3 class="font-google text-white text-xl font-bold mb-2 leading-tight">
            {titulo}
        </h3>
        
        <!-- Especialidad/rol -->
        <div class="text-sm mb-2">
            {subtitulo.includes('&') ? (
                <p class="text-orange-400 font-medium">{subtitulo.split('&')[0].trim()} <span class="text-red-400">& {subtitulo.split('&')[1].trim()}</span></p>
            ) : subtitulo.includes('AI') ? (
                <p class="text-orange-400 font-medium">{subtitulo}</p>
            ) : subtitulo.includes('Cloud') ? (
                <p class="text-blue-400 font-medium">{subtitulo}</p>
            ) : subtitulo.includes('Web') ? (
                <p class="text-blue-500 font-medium">{subtitulo}</p>
            ) : subtitulo.includes('UX') ? (
                <p class="text-green-400 font-medium">{subtitulo}</p>
            ) : (
                <p class="text-gray-300 font-medium">{subtitulo}</p>
            )}
        </div>
        
        <!-- Ubicación -->
        {location && (
            <p class="text-gray-400 text-xs font-medium">
                {location}
            </p>
        )}
    </div>
</div>

<style>
    .speaker-card {
        transition: all 0.3s ease;
    }

    .speaker-card:hover {
        transform: translateY(-8px);
    }

    .speaker-card:hover img {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }
</style>