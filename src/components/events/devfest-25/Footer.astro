---
import GdgSucreLogo from "@/assets/logos/GDGSucreLogo.svg"
import SocialIcons from "./SocialIcons.astro"
---

<footer class="w-full bg-[#1e1e1e] text-white">
  <!-- Mobile Footer -->
  <div class="block lg:hidden">
    <div class="flex flex-col items-center gap-6 px-6 py-6">
      <!-- Social Icons at Top -->
      <SocialIcons class="gap-4" />
      
      <!-- Logo Section at Bottom -->
      <div class="flex items-center gap-4 h-[33px]">
        <a
          href="https://gdg.community.dev/gdg-sucre/"
          class="flex items-center hover:opacity-80 transition-opacity"
          target="_blank"
        >
          <GdgSucreLogo class="w-auto h-full pr-4" />
          GDG Sucre
        </a>
      </div>
    </div>
  </div>

  <!-- Desktop Footer -->
  <div class="hidden lg:block">
    <div class="mx-auto max-w-screen-2xl px-8 py-8">
      <!-- Main Footer Content -->
      <div class="flex items-center justify-between gap-12">
        <!-- Logo Section -->
        <div class="flex items-center gap-6 h-[33px]">
          <a
            href="https://gdg.community.dev/gdg-sucre/"
            class="flex items-center hover:opacity-80 transition-opacity"
            target="_blank"
          >
            <GdgSucreLogo class="w-auto h-full pr-4" />
            GDG Sucre
          </a>
        </div>
        
        <!-- Spacer -->
        <div class="flex-1"></div>
        
        <!-- Social Section Right -->
        <div class="flex flex-col items-end gap-2">
          <SocialIcons class="gap-4" />
        </div>
      </div>
    </div>
  </div>
</footer>