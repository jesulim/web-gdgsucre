---
import Clock from "@/assets/events/devfest-25/clock.svg"

interface Props {
  type: "talk" | "event"
  time: string
  title: string
  description?: string
  speaker?: string
}

const { type, time, title, description, speaker } = Astro.props
---

<article
  class:list={[
    "flex flex-col gap-3 rounded-2xl border-2 bg-[#1E1E1E] p-5 md:gap-4 md:rounded-3xl md:p-6 w-full text-left",
    {
      "border-white/40": type === "event",
      "border-red-500": type === "talk",
    },
  ]}
>
  <!-- Contenido -->
  <div class="flex flex-col gap-1.5 self-stretch items-start">
    <h2
      class="text-lg font-bold leading-tight text-white md:text-xl lg:text-2xl text-left w-full"
    >
      {title}
    </h2>
    {
      speaker && (
        <p class="text-sm font-normal leading-tight text-white md:text-base text-left w-full">
          {speaker}
        </p>
      )
    }
    {
      description && (
        <p class="text-xs leading-tight text-white md:text-sm text-left w-full">
          {description}
        </p>
      )
    }
  </div>

  <!-- Tiempo con Ã­cono -->
  <div class="flex items-center gap-2">
    <Clock class="h-4 w-4 md:h-5 md:w-5" />
    <time
      class:list={[
        "text-sm font-normal leading-none md:text-base",
        {
          "text-white": type === "event",
          "text-red-500": type === "talk",
        },
      ]}
    >
      {time}
    </time>
  </div>
</article>
