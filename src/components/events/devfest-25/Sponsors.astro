---
import { Image } from "astro:assets"
import TenMinds from "@/assets/events/devfest-25/sponsors/10minds.webp"
import Delve from "@/assets/events/devfest-25/sponsors/delve.webp"
import Favorcito from "@/assets/events/devfest-25/sponsors/favorcito.webp"
import Helvetas from "@/assets/events/devfest-25/sponsors/helvetas.webp"
import JalaU from "@/assets/events/devfest-25/sponsors/jalau.webp"
import Mediamor from "@/assets/events/devfest-25/sponsors/mediamor.webp"
import Napp from "@/assets/events/devfest-25/sponsors/napp.webp"
import Navi from "@/assets/events/devfest-25/sponsors/navi_full.svg"

const sponsors = [
  {
    src: Delve,
    link: "Delve",
  },
  {
    src: Helvetas,
    link: "Helvetas",
  },
  {
    src: TenMinds,
    link: "10 Minds",
  },
  {
    src: Napp,
    link: "Fundaci√≥n Napp",
  },
  {
    src: Favorcito,
    link: "Favorcito",
  },
  {
    src: JalaU,
    link: "",
  },
  {
    src: Mediamor,
    link: "Mediamor",
  },
]
---

<section id="sponsors">
  <h2 class="text-4xl lg:text-5xl text-center font-bold mb-4 md:mb-6">Sponsors</h2>
  <div class="flex flex-row mx-4 mb-4">
    <div
      class="grid grid-cols-2 md:grid-cols-3 place-items-center gap-8 bg-white rounded-3xl p-8 md:py-12 mx-auto max-w-6xl"
    >
      <Navi height="100" />
      {
        sponsors.map(({ src, link }) => (
          <a href={link} target="_blank" rel="noopener noreferrer">
            <Image src={src} alt={link} height="100" srcset="" />
          </a>
        ))
      }
    </div>
  </div>
</section>
