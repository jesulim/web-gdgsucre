---
import speakers from "../../../../data/speakers.json"
import { SpeakerCard } from "./speakerCard"
---

<div class="w-full py-8 flex flex-col items-center gap-8 md:gap-8">
  <div class="mx-auto my-2 max-w-screen-xl px-4 md:my-8 ">
    <div>
      <h2 class="text-4xl font-bold mb-10 text-center">Speakers</h2>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-y-12 gap-x-12"
    >
      {speakers.map((data, i) => <SpeakerCard {...data} />)}
    </div>
  </div>
</div>
