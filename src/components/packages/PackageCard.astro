---
// Props del componente
export interface Props {
  title: string
  benefits: string[]
  imageSrc: string
  imageAlt: string
  price: string
}

const { title, benefits, imageSrc, imageAlt, price } = Astro.props
---

<div class="bg-gradient-to-br from-white via-gray-50 to-gray-100 rounded-[2.5rem] shadow-2xl p-8 flex flex-col justify-between h-96 w-80 mx-auto border border-gray-200/50 backdrop-blur-sm">
  <!-- Card Title -->
  <div class="text-center mb-6">
    <h3 class="text-[26px] font-bold text-[#1e1e1e] tracking-tight leading-tight">
      {title}
    </h3>
  </div>
  
  <!-- Card Content -->
  <div class="flex-1 flex flex-col justify-center">
    <div class="flex items-start gap-6">
      <!-- Left Column - Text List -->
      <div class="flex-1">
        <ul class="space-y-3">
          {benefits.map((benefit) => (
            <li class="flex items-center gap-3 group">
              <div class="w-2 h-2 bg-black rounded-full flex-shrink-0 group-hover:scale-125 group-hover:bg-[#4285f4] transition-all duration-200"></div>
              <span class="text-[16px] font-bold text-[#1e1e1e] leading-tight group-hover:text-[#4285f4] transition-colors duration-200">
                {benefit}
              </span>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Right Column - Package Image -->
      <div class="flex items-center justify-center flex-shrink-0">
        <div class="w-32 h-32 overflow-hidden rounded-3xl bg-gradient-to-br from-gray-100 to-gray-200 shadow-lg hover:shadow-xl hover:scale-110 transition-all duration-300  border-white/60">
          <img 
            src={imageSrc} 
            alt={imageAlt} 
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
      </div>
    </div>
  </div>
  
  <!-- Price Button -->
  <div class="text-center mt-6">
    <div class="bg-[#1e1e1e] text-white px-8 py-3 rounded-full font-bold text-[20px] inline-block shadow-lg hover:bg-gray-800 hover:shadow-xl hover:scale-105 transition-all duration-300">
      {price}
    </div>
  </div>
</div>
